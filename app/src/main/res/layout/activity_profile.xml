<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomNavigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Profile_Logout"
        app:menu="@menu/bottom_menu_bar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="651dp"
        android:layout_height="0dp"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/button_Profile_Cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcome" />

    <Button
        android:id="@+id/button_Profile_Logout"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="LogOUT"
        android:textSize="18dp"
        app:backgroundTint="#B48569"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/BottomNavigate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Profile_Cart" />

    <Button
        android:id="@+id/button_Profile_Cart"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="111dp"
        android:text="Cart"
        android:textSize="18dp"
        app:backgroundTint="#B48569"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/button_Profile_Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>